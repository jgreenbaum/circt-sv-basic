    "version": "0.2.0",
    "configurations": [
    
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'circt-generators'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=circt-generators",
                    "--package=circt-generators"
                ],
                "env": {
                    "LLVM_CONFIG_PATH": "../../install-last_llvm_20/bin",
                    "MLIR_SYS_200_PREFIX": "../../install-last_llvm_20",
                    "TABLEGEN_200_PREFIX": "../../install-last_llvm_20",                    
                },
                "filter": {
                    "name": "circt-generators",
                    "kind": "bin"
                }
            },
            "args": [],
            "env": {
                "LD_LIBRARY_PATH": "../../install-last_llvm_20/lib"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'circt-generators'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=circt-generators",
                    "--package=circt-generators"
                ],
                "filter": {
                    "name": "circt-generators",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}